<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="343dp"
        android:layout_height="200.19dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:background="@drawable/border_container">

        <TextView
            android:id="@+id/categoryTxt"
            android:layout_width="78dp"
            android:layout_height="23dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:background="@drawable/border_container"
            android:backgroundTint="@color/pink"
            android:text="Category"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <ImageButton
            android:id="@+id/hearthImageBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="8dp"
            android:background="@color/white"
            android:padding="3dp"
            android:src="@drawable/ic_hearth"
            android:onClick="changeHearth"
            />

        <TextView
            android:id="@+id/resultTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/categoryTxt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:maxWidth="200dp"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="8dp"
            android:padding="12dp"
            android:text="Free"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/round_ic"
            android:layout_alignParentBottom="true"
            android:padding="12dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/round_ic"
            android:layout_alignParentBottom="true"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="120dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/round_ic"
            android:layout_alignParentBottom="true"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="174dp"/>

        <ProgressBar
            xmlns:tools="http://schemas.android.com/tools"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="70dp"
            android:layout_height="10dp"
            android:progressDrawable="@drawable/gradient_progress"
            tools:progress="60"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="26dp"
            android:layout_marginEnd="12dp"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/nextBtn"
        android:layout_width="343dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginTop="26dp"
        android:text="Next"
        android:backgroundTint="@color/blue"
        android:onClick="onDestroy"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <Spinner
            android:id="@+id/category_spinner_items"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_marginLeft="24dp"
            android:background="@color/white"/>

        <SeekBar
            android:id="@+id/seekBar_luminosite"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:layout_marginStart="34dp"
            />
    </LinearLayout>


</LinearLayout>